{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": " if [ -d \"dist\" ]; then rm -Rf dist; fi && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "debug": "nodemon -L --config nodemon-docker-debug.json",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "build:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.1.0",
    "@nestjs/common": "^6.1.1",
    "@nestjs/core": "^6.1.1",
    "@nestjs/graphql": "^7.3.1",
    "@nestjs/microservices": "^6.1.1",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^6.11.11",
    "@nestjs/swagger": "^4.5.2",
    "@nestjs/terminus": "^6.1.0",
    "@nestjs/websockets": "^6.1.1",
    "@nestjsplus/cookies": "^1.1.1",
    "class-validator": "^0.12.1",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "express-rate-limit": "^5.1.1",
    "helmet": "^3.22.0",
    "jwt-decode": "^2.2.0",
    "keycloak-admin": "^1.13.0",
    "lodash": "^4.17.15",
    "logrocket": "^1.0.0",
    "moment": "^2.24.0",
    "morgan": "^1.10.0",
    "nestjs-redis": "^1.2.0",
    "openid-client": "^3.14.2",
    "passport-keycloak-bearer": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "^6.4.0",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@nestjs/testing": "6.0.5",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.9.0",
    "@types/node": "11.13.2",
    "@types/supertest": "2.0.7",
    "jest": "24.7.1",
    "nodemon": "1.18.11",
    "prettier": "1.16.4",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.0.3",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.15.0",
    "typescript": "3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
